<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:background="@drawable/shape_item_credit">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCreditDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00/00/00"
            style="@style/basicText"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textAllCaps="true"
                tools:text="COP"
                style="@style/basicText"/>

            <TextView
                android:id="@+id/tvTotalCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$672,000"
                android:textColor="@color/primaryDark"
                style="@style/basicText"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="8dp"
                android:layout_height="2dp"
                app:dividerColor="@color/primaryDark"
                android:layout_marginHorizontal="4dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvCreditState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Actual"
                android:textColor="@color/primaryDark"
                style="@style/basicText"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnDetail"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:src="@drawable/ic_info"
        android:contentDescription="@string/content_imageInfo"/>

</LinearLayout>